@page "/departamentos"
@using System.Net.Http.Json
@inject HttpClient Http

<h3>Gestión de Departamentos</h3>

@if (error != null)
{
    <div class="alert alert-danger" role="alert">
        Error: @error
    </div>
}

@if (departamentos == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <div class="card bg-light mb-3" style="max-width: 30rem;">
        <div class="card-header">Nuevo Departamento</div>
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Nombre:</label>
                <input @bind="nuevoDepto.Nombre" class="form-control" placeholder="Ej. Ingeniería" />
            </div>
            <div class="mb-3">
                <label class="form-label">Presupuesto:</label>
                <input @bind="nuevoDepto.Presupuesto" type="number" class="form-control" placeholder="50000" />
            </div>
            <button @onclick="CrearDepartamento" class="btn btn-primary">Guardar</button>
        </div>
    </div>


    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Presupuesto</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var depto in departamentos)
            {
                <tr>
                    <td>@depto.Id</td>
                    <td>@depto.Nombre</td>
                    <td>@depto.Presupuesto.ToString("C")</td>
                    <td><button @onclick="() => BorrarDepartamento(depto.Id)" class="btn btn-danger btn-sm">Borrar</button></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    
    public class DepartmentDto
    {
        public int Id { get; set; }
        public string? Nombre { get; set; }
        public decimal Presupuesto { get; set; }
    }

    public class DepartmentCreateDto
    {
        public string? Nombre { get; set; }
        public decimal Presupuesto { get; set; }
    }

   
    private List<DepartmentDto>? departamentos;
    private DepartmentCreateDto nuevoDepto = new();
    private string? error;

    
    protected override async Task OnInitializedAsync()
    {
        await CargarDepartamentos();
    }

   
    private async Task CargarDepartamentos()
    {
        try
        {
            
            departamentos = await Http.GetFromJsonAsync<List<DepartmentDto>>("api/Departamentos");
            error = null;
        }
        catch (Exception ex)
        {
            error = $"No se pudo cargar la lista: {ex.Message}";
        }
    }

    
    private async Task CrearDepartamento()
    {
        try
        {
            
            var response = await Http.PostAsJsonAsync("api/Departamentos", nuevoDepto);

            if (response.IsSuccessStatusCode)
            {
                
                nuevoDepto = new();
                await CargarDepartamentos();
            }
            else
            {
                
                var errorMsg = await response.Content.ReadAsStringAsync();
                error = $"Error al crear (API devolvió 400): {errorMsg}";
            }
        }
        catch (Exception ex)
        {
            error = $"Error fatal al crear: {ex.Message}";
        }
    }

    private async Task BorrarDepartamento(int id)
    {
        try
        {
            var response = await Http.DeleteAsync($"api/Departamentos/{id}");
            if (response.IsSuccessStatusCode)
            {
                await CargarDepartamentos(); 
            }
            else
            {
                error = "No se pudo borrar el departamento.";
            }
        }
        catch (Exception ex)
        {
            error = $"Error fatal al borrar: {ex.Message}";
        }
    }
}