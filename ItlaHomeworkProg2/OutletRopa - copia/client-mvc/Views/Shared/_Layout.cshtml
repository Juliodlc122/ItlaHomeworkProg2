<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Julio & Co.</title>

    <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index" style="letter-spacing: 2px;">Julio & Co.</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    @using Microsoft.AspNetCore.Http
                    @inject IHttpContextAccessor HttpContextAccessor

                    @{
                        var sessionName = HttpContextAccessor.HttpContext?.Session.GetString("UsuarioNombre");
                        var sessionRol = HttpContextAccessor.HttpContext?.Session.GetString("UsuarioRol");
                    }

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Tienda" asp-action="Index">Catálogo</a>
                        </li>
                        @if (sessionRol == "Cliente")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Tienda" asp-action="MisCompras">
                                    <i class="bi bi-bag-check"></i> Mis Pedidos
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item me-3">
                            <a class="nav-link text-warning fw-bold" asp-controller="Tienda" asp-action="Carrito">
                                <i class="bi bi-cart4"></i> Ver Carrito
                            </a>
                        </li>

                        @if (string.IsNullOrEmpty(sessionName))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white small text-uppercase me-2" asp-controller="Acceso" asp-action="Registrar" style="text-decoration: underline;">
                                    Crear Cuenta
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-warning btn-sm px-4 fw-bold text-dark rounded-0" asp-controller="Acceso" asp-action="Login">
                                    <i class="bi bi-person-fill"></i> LOGIN
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white fw-bold text-uppercase border border-white px-3 py-1 rounded-pill" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i> @sessionName
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow mt-2">
                                    <li><span class="dropdown-header text-muted small">Rol: @sessionRol</span></li>
                                    @if (sessionRol == "Empleado")
                                    {
                                        <li><a class="dropdown-item text-primary fw-bold" asp-controller="Home" asp-action="ReporteVentas"><i class="bi bi-graph-up"></i> Reporte Ventas</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Acceso" asp-action="Logout"><i class="bi bi-box-arrow-right"></i> Cerrar Sesión</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white pt-5 pb-4 mt-auto">
        <div class="container text-center text-md-start">
            <div class="row text-center text-md-start">

                <div class="col-md-3 mx-auto mt-3">
                    <h5 class="text-uppercase mb-4 fw-bold text-warning">Julio & Co.</h5>
                    <p>Tu destino número uno para moda exclusiva.</p>
                </div>

                <div class="col-md-3 mx-auto mt-3">
                    <h5 class="text-uppercase mb-4 fw-bold text-warning">Enlaces</h5>
                    <p>
                        <a asp-controller="Tienda" asp-action="Index" class="text-white text-decoration-none">Catálogo</a>
                    </p>
                    <p>
                        <a asp-controller="Tienda" asp-action="Carrito" class="text-white text-decoration-none">Carrito</a>
                    </p>
                </div>

                <div class="col-md-3 mx-auto mt-3">
                    <h5 class="text-uppercase mb-4 fw-bold text-warning">Contacto</h5>
                    <p>
                        <i class="bi bi-geo-alt-fill me-2"></i> Santo Domingo, RD
                    </p>
                    <p>
                        <i class="bi bi-envelope-fill me-2"></i> contacto@julioandco.com
                    </p>
                </div>
            </div>

            <hr class="mb-4">

            <div class="text-center">
                <p>© 2025 - <strong class="text-warning">Julio Ruiz 20242009</strong></p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["MensajeExito"] != null)
    {
        <script>
            Swal.fire({
                title: '¡Excelente!',
                text: '@TempData["MensajeExito"]',
                icon: 'success',
                confirmButtonText: 'Aceptar',
                confirmButtonColor: '#000000',
                timer: 3000
            });
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>