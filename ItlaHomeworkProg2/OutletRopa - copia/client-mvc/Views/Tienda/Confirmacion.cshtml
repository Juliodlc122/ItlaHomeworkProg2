@{
    ViewData["Title"] = "Compra Exitosa";
}

<div class="container text-center mt-5">
    <div class="card shadow p-5 border-0" style="max-width: 600px; margin: 0 auto;">

        <div class="mb-4">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
        </div>

        <h1 class="text-success mb-3">¡Gracias por tu compra!</h1>

        <p class="lead text-muted">
            Tu pedido ha sido procesado correctamente y guardado en nuestro sistema.
        </p>

        <hr class="my-4">

        <p>
            ¿Quieres seguir viendo ofertas?
        </p>

        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a asp-controller="Tienda" asp-action="Index" class="btn btn-primary btn-lg px-4 gap-3">
                Volver al Catálogo
            </a>
        </div>
    </div>
</div>