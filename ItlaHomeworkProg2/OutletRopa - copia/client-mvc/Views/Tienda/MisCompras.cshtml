@model List<client_mvc.Models.PedidoResumenDto>
@using System.Globalization

@{
    ViewData["Title"] = "Mis Compras";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var culture = new CultureInfo("es-DO");
}

<div class="container mt-5">
    <h2 class="mb-4 text-warning"><i class="bi bi-bag-check-fill"></i> HISTORIAL DE COMPRAS</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-secondary text-center p-5">
            <h4>No has realizado compras aún.</h4>
            <a href="@Url.Action("Index", "Tienda")" class="btn btn-outline-dark mt-3">Ir al Catálogo</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var pedido in Model)
            {
                <div class="col-12 mb-4">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                            <div>
                                <span class="fw-bold">Pedido #@pedido.CodigoPedido</span>
                                <span class="mx-2">|</span>
                                <small>@pedido.Fecha.ToString("dd/MM/yyyy hh:mm tt")</small>
                            </div>
                            <div>
                                <span class="badge bg-success me-2">@pedido.Estado</span>
                                <span class="fs-5 fw-bold text-warning">
                                    RD$ @pedido.TotalPagado.ToString("N2", culture)
                                </span>
                            </div>
                        </div>

                        <div class="card-body bg-light">
                            <h6 class="text-muted border-bottom pb-2">Detalles:</h6>
                            <p class="mb-0">
                                <i class="bi bi-box-seam me-2"></i>
                                @pedido.ResumenProductos
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>