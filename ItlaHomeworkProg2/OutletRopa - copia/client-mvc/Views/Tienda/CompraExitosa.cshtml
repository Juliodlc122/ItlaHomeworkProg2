@{
    ViewData["Title"] = "Compra Exitosa";
}

<div class="container mt-5 text-center">
    <div class="card border-0 shadow-sm mx-auto p-5" style="max-width: 600px;">
        <div class="mb-4">
            <i class="bi bi-check-circle-fill text-success display-1"></i>
        </div>

        <h2 class="fw-bold text-success mb-3">¡Pago Realizado con Éxito!</h2>
        <p class="text-muted mb-4">
            Gracias por tu compra. Tu pedido ha sido procesado y registrado correctamente en nuestro sistema.
        </p>

        <div class="d-grid gap-3 col-md-8 mx-auto">
            <a asp-action="MisCompras" class="btn btn-primary btn-lg fw-bold">
                <i class="bi bi-bag-check-fill me-2"></i> Ver Mis Pedidos
            </a>

            <a asp-action="Index" class="btn btn-outline-dark btn-lg fw-bold">
                <i class="bi bi-arrow-left me-2"></i> Seguir Comprando
            </a>
        </div>
    </div>
</div>