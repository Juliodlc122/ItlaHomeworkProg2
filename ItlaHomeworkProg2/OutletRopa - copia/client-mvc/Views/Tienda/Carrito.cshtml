@model List<client_mvc.Models.ProductViewModel>

@{
    ViewData["Title"] = "Mi Carrito";
    decimal granTotal = Model != null ? Model.Sum(x => x.Precio > 0 ? x.Precio : x.PrecioOriginal) : 0;
}

<div class="container mt-5 mb-5">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-cart3 fs-1 me-3"></i>
        <h2 class="text-uppercase fw-bold" style="letter-spacing: 2px;">Mi Carrito</h2>
    </div>

    @if (TempData["ApiError"] != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ApiError"]
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-5 bg-light rounded shadow-sm">
            <i class="bi bi-cart-x display-1 text-muted"></i>
            <h3 class="mt-3 text-muted">Tu carrito está vacío.</h3>
            <a asp-controller="Tienda" asp-action="Index" class="btn btn-dark mt-3 px-4 py-2 fw-bold">
                IR AL CATÁLOGO
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm mb-4">
            <table class="table table-hover align-middle mb-0 bg-white">
                <thead class="bg-light text-secondary small text-uppercase fw-bold">
                    <tr>
                        <th class="py-3 ps-4">Producto</th>
                        <th class="py-3">Talla</th>
                        <th class="py-3">Precio</th>
                        <th class="py-3 text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="border-bottom">
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(item.ImagenUrl))
                                    {
                                        <img src="@item.ImagenUrl" alt="@item.Nombre" class="rounded me-3" style="width: 60px; height: 60px; object-fit: cover;">
                                    }
                                    <span class="fw-bold text-dark">@item.Nombre</span>
                                </div>
                            </td>
                            <td class="text-muted">@item.Talla</td>
                            <td class="fw-bold text-success">
                                RD$ @item.Precio.ToString("N2")
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="EliminarDelCarrito" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot class="bg-light">
                    <tr>
                        <td colspan="4" class="text-end py-3 pe-4 fw-bold text-secondary">
                            TOTAL: RD$ @granTotal.ToString("N2")
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="card border-0 shadow-sm mt-4">
            <div class="card-body p-4">
                <div class="row align-items-center">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <a asp-controller="Tienda" asp-action="Index" class="btn btn-outline-dark text-uppercase fw-bold" style="letter-spacing: 1px;">
                            <i class="bi bi-arrow-left"></i> Seguir Comprando
                        </a>
                    </div>

                    <div class="col-md-6 text-md-end">
                        <h4 class="fw-bold text-success mb-3">
                            TOTAL ESTIMADO: RD$ @granTotal.ToString("N2")
                        </h4>

                        <form asp-controller="Tienda" asp-action="IrAPagar" method="get" class="d-flex justify-content-md-end gap-2">
                            <input name="codigoCupon" class="form-control me-2" placeholder="Código cupón (opcional)" style="max-width:220px" />

                            <button type="submit" class="btn btn-success btn-lg">
                                Pagar Ahora <i class="bi bi-credit-card-2-back-fill ms-2"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>