@{
    ViewData["Title"] = "Iniciar Sesión";
    var returnUrl = ViewBag.ReturnUrl as string;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 rounded-0">
                <div class="card-header bg-dark text-white text-center py-4">
                    <h3 class="mb-0 fw-bold" style="letter-spacing: 2px;">LOGIN</h3>
                </div>
                <div class="card-body p-5">

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center">@ViewBag.Error</div>
                    }

                    <form asp-action="Login" method="post" class="mt-4">
                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                        <div class="mb-4">
                            <label class="form-label text-muted text-uppercase small fw-bold">Email</label>
                            <input type="email" name="Email" class="form-control form-control-lg rounded-0 bg-light" placeholder="ej: admin@outlet.com" required>
                        </div>
                        <div class="mb-4">
                            <label class="form-label text-muted text-uppercase small fw-bold">Contraseña</label>
                            <input type="password" name="Password" class="form-control form-control-lg rounded-0 bg-light" placeholder="******" required>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg rounded-0 text-uppercase fw-bold">Entrar</button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <small class="text-muted">¿Eres nuevo?</small>
                        <a asp-action="Registrar" class="text-dark fw-bold text-decoration-underline">
                            Regístrate aquí
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>